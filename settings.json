{
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    "window.autoDetectColorScheme": true,
    "editor.linkedEditing": true,
    "files.trimTrailingWhitespace": true,
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.hovers.enabled": false,
    "workbench.editor.tabSizing": "shrink",
    "[python]": {
        "editor.formatOnType": true
    },
    "github.copilot.nextEditSuggestions.enabled": true,
    "chat.edits2.enabled": true,
    "chat.agent.maxRequests": 50,
    "chat.tools.terminal.autoApprove": {
        // === COPILOT DEFAULTS (as of 2025-09-24) ===
        "cd": true,
        "echo": true,
        "ls": true,
        "pwd": true,
        "cat": true,
        "head": true,
        "tail": true,
        "findstr": true,
        "wc": true,
        "tr": true,
        "cut": true,
        "cmp": true,
        "which": true,
        "basename": true,
        "dirname": true,
        "realpath": true,
        "readlink": true,
        "stat": true,
        "file": true,
        "du": true,
        "df": true,
        "sleep": true,
        "git status": true,
        "git log": true,
        "git show": true,
        "git diff": true,
        "Get-ChildItem": true,
        "Get-Content": true,
        "Get-Date": true,
        "Get-Random": true,
        "Get-Location": true,
        "Write-Host": true,
        "Write-Output": true,
        "Split-Path": true,
        "Join-Path": true,
        "Start-Sleep": true,
        "Where-Object": true,
        "/^Select-[a-z0-9]/i": true,
        "/^Measure-[a-z0-9]/i": true,
        "/^Compare-[a-z0-9]/i": true,
        "/^Format-[a-z0-9]/i": true,
        "/^Sort-[a-z0-9]/i": true,
        "column": true,
        "/^column\\b.*-c\\s+[0-9]{4,}/": false,
        "date": true,
        "/^date\\b.*(-s|--set)\\b/": false,
        "find": true,
        "/^find\\b.*-(delete|exec|execdir|fprint|fprintf|fls|ok|okdir)\\b/": false,
        "grep": true,
        "/^grep\\b.*-(f|P)\\b/": false,
        "sort": true,
        "/^sort\\b.*-(o|S)\\b/": false,
        "tree": true,
        "/^tree\\b.*-o\\b/": false,
        "/\\(.+\\)/": {
            "approve": false,
            "matchCommandLine": true
        },
        "/\\{.+\\}/": {
            "approve": false,
            "matchCommandLine": true
        },
        "/`.+`/": {
            "approve": false,
            "matchCommandLine": true
        },
        "rm": false,
        "rmdir": false,
        "del": false,
        "Remove-Item": false,
        "ri": false,
        "rd": false,
        "erase": false,
        "dd": false,
        "kill": false,
        "ps": false,
        "top": false,
        "Stop-Process": false,
        "spps": false,
        "taskkill": false,
        "taskkill.exe": false,
        "curl": false,
        "wget": false,
        "Invoke-RestMethod": false,
        "Invoke-WebRequest": false,
        "irm": false,
        "iwr": false,
        "chmod": false,
        "chown": false,
        "Set-ItemProperty": false,
        "sp": false,
        "Set-Acl": false,
        "jq": false,
        "xargs": false,
        "eval": false,
        "Invoke-Expression": false,
        "iex": false,
        // === MY CUSTOMIZATIONS ===
        "uniq": true,
        "/^ruff check .*$/": true,
    },
    "chat.checkpoints.showFileChanges": true,
    "accessibility.voice.speechTimeout": 0,
    "terminal.integrated.env.linux": {
        "HISTFILE": "${env:HOME}/.vscode/history/.bash_history_${workspaceFolderBasename}"
    },
    "terminal.integrated.env.osx": {
        "HISTFILE": "${env:HOME}/.vscode/history/.bash_history_${workspaceFolderBasename}"
    },
    "chat.agentSessionsViewLocation": "view",
    "chat.mcp.gallery.enabled": true,
    "gitlens.ai.model": "vscode",
    "gitlens.ai.vscode.model": "copilot:gpt-4.1",
    "diffEditor.maxComputationTime": 0,
    "ruff.configurationPreference": "filesystemFirst"
}